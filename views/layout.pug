doctype html
html
  head
    title Cyberlove - Random Video Chats
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/css/stylesheet.css')
    block scripts
  body
    div.header-space
    header
      a(href="/", class='logo') Cyberlove
      nav.main
        ul.menubar
          if (!user)
            li.quicklogin
              form(role='form', action='/login', method='post')
                input(type='text', name="username", placeholder='Username')
                input(type='password', name="password", placeholder='Password')
                button.btn.btn-default(type='submit') Login
            li
              a.btn.btn-primary(href="/register") Register
          if (user)
            li.profile-link
              a(href="/users/" + user.username) #{user.username}
              ul
                li
                  a(href="/update") Edit info
                li
                  a(href="/logout") Logout
    block content
